@model GAMF.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h2 class="set-top-margin">Tantárgy törlése</h2>

<h3>Biztos, hogy törölni szeretné a tantárgyat?</h3>
<div>
    <h4>Tantárgy</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Credits)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Credits)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Törlés" class="btn btn-default" /> |
        <a asp-action="Index">Vissza a tantárgyak listájához</a>
    </form>
</div>
